---
import { Image, Picture } from 'astro:assets';
import MainLayout from './Main.astro';

import backgroundImage from '../assets/frontpage-background-alt.jpg';
---

<MainLayout image={backgroundImage.src}>
  <main class="h-full w-full">
    <Picture
      loading="lazy"
      width={1600}
      decoding="async"
      src={backgroundImage}
      formats={['avif', 'webp', 'jpeg']}
      alt="Broken free"
      class="absolute -z-10 w-full h-full object-cover"
    />

    <div class="p-24 space-y-12">
      <header class="text-white">
        <h1 class="text-6xl font-hero">
          <span class="bg-black">bankara.ink</span>
        </h1>
        <h2 class="text-2xl">
          <span class="bg-black">A collection of virtual photographs</span>
        </h2>
      </header>

      <nav>
        <ul class="text-2xl">
          <li>
            <a href="/works">Works</a>
          </li>
        </ul>
      </nav>
    </div>
  </main>
</MainLayout>

<style>
  @reference '../styles/global.css';

  a {
    @apply bg-amber-300;
  }

  a:hover {
    @apply bg-white;
    @apply underline;
  }
</style>
