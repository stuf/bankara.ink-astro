---
import { SITE_DESCRIPTION } from '../consts';
import BaseHead from '../components/BaseHead.astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title?: string;
  image?: string;
}

const { title, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} image={image} />
  </head>

  <body>
    <slot />

    <Analytics />
  </body>
</html>
